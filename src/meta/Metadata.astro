---
const TITLE: string = "Traduccion | Sofia Kaminskii"
const DESCRIPTION: string = "Servicios de traducción altamente especializados en documentos técnicos y patentes. Mi enfoque se centra en garantizar precisión y claridad en la transmisión de información técnica y legal."
const FAVICON: string = "/favicon.svg"
const SHORT_DESCRIPTION: string = "Servicios de traducción de alta calidad para negocios, documentos técnicos y legales. Precisión lingüística para su éxito internacional."
const SOCIAL_MEDIA_IMAGE: string = "https://blog.ida.cl/wp-content/uploads/sites/5/2021/02/ida-traduccionUX-blog.png"
const SOCIAL_MEDIA_IMAGE_ALT: string = "Servicio de traducción"
const MAIN_COLOR: string = "#fff"
const KEYWORDS: string[] = ["Traducción"]
const AUTHOR: string = "Sofia Kaminskii"
const COPYRIGHT: string = "Sofia Kaminskii"

// DO NOT EDIT BELOW THIS LINE
const KEYWORDS_STRING: string = KEYWORDS.join(", ")
---

<meta charset="utf-8" />

<!-- GOOGLE META -->
<meta name="description" content={DESCRIPTION}/>
<title>{TITLE}</title>
<meta name="robots" content="index, follow"/>

<!-- OPEN GRAPH (SOCIAL MEDIA) -->
<meta property="og:title" content={TITLE}/>
<meta property="og:description" content={SHORT_DESCRIPTION}/>
<meta property="og:image" content={SOCIAL_MEDIA_IMAGE}/>
<meta property="og:image:alt" content={SOCIAL_MEDIA_IMAGE_ALT}/>

<!-- SAFARI -->
<meta name="theme:color" content={MAIN_COLOR}/>

<!-- KEYWORDS -->
<meta name="keywords" content={KEYWORDS_STRING}/>

<!-- AUTHOR AND COPYRIGHT -->
<meta name="author" content={AUTHOR} />
<meta name="copyright" content={COPYRIGHT} />

<!-- OTHER -->
<meta name="viewport" content="width=device-width" />
<link rel="icon" type="image/svg+xml" href={FAVICON} />
<meta http-equiv="cache-control" content="no-cache"/>
