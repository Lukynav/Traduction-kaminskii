---
import Title from "@components/title/Title.astro";
import Email from "./components/email/Email.astro";
import Phone from "./components/phone/Phone.astro"
import Whatsapp from "./components/whatsapp/Whatsapp.astro"
import ContactFom from "./components/contactForm/Contact.tsx"
const {languaje} = Astro.props
---
<Title title={languaje === "english" ? "Let´s get in touch" : "Pongámonos en contacto"} />

<!-- Contact box -->
<section class="max-w-3xl m-4 lg:m-auto mt-6 flex gap-6 flex-col py-8 px-6 md:px-12 rounded-xl bg-sky-100 shadow-[inset_0px_4px_4px] shadow-slate-300 hover:shadow-slate-300 hover:shadow-[inset_2px_6px_6px]">
    <Whatsapp />
    <Email />
    <Phone />
</section>

<Title title={languaje === "english" ? "Queries:" : "Consultas:"} />

<ContactFom client:only="react" languaje={languaje} />
