---
import { EMAIL_CHANNEL, WHATSAPP_CHANNEL } from "@models/consts";
---
<section class="fixed right-6 bottom-28 sm:bottom-12 flex flex-col gap-3">
    <a class="p-4 bg-slate-900 rounded-full hover:bg-slate-600 shadow-lg animate-fade-up animate-once " href={EMAIL_CHANNEL.url} aria-label="contacto de correo electronico">
        <img class="w-8 h-8" src="https://cdn-icons-png.flaticon.com/512/281/281769.png" alt="whatsapp icon" />
    </a>
    <a class="p-4 bg-slate-900 rounded-full hover:bg-slate-600 animate-fade-up animate-once shadow-lg" href={WHATSAPP_CHANNEL.url} target="_blank" aria-label="contacto de whatsapp">
        <img class="w-8 h-8" src="https://upload.wikimedia.org/wikipedia/commons/thumb/5/5e/WhatsApp_icon.png/598px-WhatsApp_icon.png" alt="whatsapp icon" />
    </a>
</section>