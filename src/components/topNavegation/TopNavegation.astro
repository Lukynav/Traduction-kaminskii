---
import type { ICommunicationChannel } from '@models/interfaces/index'
import Channel from './components/Channel.astro'
import {
  PHONE_CHANNEL,
  EMAIL_CHANNEL,
  OPEN_HOURS
} from '@models/consts/index'

const COMUNICATION_CHANNELS: ICommunicationChannel[] = [
  PHONE_CHANNEL,
  EMAIL_CHANNEL,
  OPEN_HOURS
]
---

<nav class="w-screen bg-slate-50 flex justify-center items-center p-2 font-light">
    <ul class="flex justify-center gap-x-4 gap-y-2 flex-wrap">
        {COMUNICATION_CHANNELS.map((CHANNEL) => <Channel channelProps={CHANNEL} />)}
    </ul>
</nav>
